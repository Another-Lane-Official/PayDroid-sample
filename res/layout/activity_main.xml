<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center" >

    <!-- 都度決済 -->

    <Button
        android:id="@+id/normal_payment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:onClick="click"
        android:text="@string/first_button" />

    <!-- クイックチャージ一回目 -->

    <Button
        android:id="@+id/quick_charge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/normal_payment"
        android:layout_centerHorizontal="true"
        android:onClick="click"
        android:text="@string/fifth_button" />

    <!-- クイックチャージ（二回目以降） -->

    <Button
        android:id="@+id/quick_charge_second"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/quick_charge"
        android:layout_centerHorizontal="true"
        android:onClick="click"
        android:text="@string/third_button" />

    <Button
        android:id="@+id/quick_charge_change"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/quick_charge_second"
        android:layout_centerHorizontal="true"
        android:onClick="click"
        android:text="@string/fourth_button" />

</RelativeLayout>